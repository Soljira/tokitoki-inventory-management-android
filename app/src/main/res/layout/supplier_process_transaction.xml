<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <!--tools:context=".ProcessTransactionActivity"
    School ko gawin yung functions promise-->


    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="492dp"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="58dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:contentDescription="Back"
                android:paddingEnd="8dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Process Transaction"
                android:textColor="@color/tokiBlack"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="371dp"
                android:orientation="vertical"
                android:padding="12dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order #1357"
                    android:textColor="@color/tokiBlack"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/tokiGray" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="6dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:contentDescription="Location Icon"
                        android:paddingEnd="6dp"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tokyo Tokyo Dagupan Branch"
                        android:textColor="@color/tokiBlack"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_2400_arellano_street_dagupan_city_pangasinan"
                    android:textColor="@color/tokiGray"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/tokiGray" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/date_placed"
                        android:textColor="@color/tokiBlack"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10-31-2024 13:30 PM"
                        android:textColor="@color/tokiGray"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/tokiGray" />


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:stretchColumns="1">

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Items"
                            android:textColor="@color/tokiBlack"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="Quantity"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/tokiGray" />

                    <TableRow>

                        <TextView
                            android:text="Cabbages"
                            android:textColor="@color/tokiGray" />

                        <TextView
                            android:gravity="end"
                            android:text="50 kg"
                            android:textColor="@color/tokiGray" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Carrots"
                            android:textColor="@color/tokiGray" />

                        <TextView
                            android:gravity="end"
                            android:text="50 kg"
                            android:textColor="@color/tokiGray" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Eggplants"
                            android:textColor="@color/tokiGray" />

                        <TextView
                            android:gravity="end"
                            android:text="30 kg"
                            android:textColor="@color/tokiGray" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Eggs"
                            android:textColor="@color/tokiGray" />

                        <TextView
                            android:gravity="end"
                            android:text="40 dozen"
                            android:textColor="@color/tokiGray" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Pineapples"
                            android:textColor="@color/tokiGray" />

                        <TextView
                            android:gravity="end"
                            android:text="30 kg"
                            android:textColor="@color/tokiGray" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Pork Belly"
                            android:textColor="@color/tokiGray" />

                        <TextView
                            android:gravity="end"
                            android:text="60 kg"
                            android:textColor="@color/tokiGray" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Soy Sauce"
                            android:textColor="@color/tokiGray" />

                        <TextView
                            android:gravity="end"
                            android:text="20 L"
                            android:textColor="@color/tokiGray" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/remove_request_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/tokiRed"
            android:text="Remove Request"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/deliver_request_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/tokiBlack"
            android:text="Deliver Request"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
