<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back"
                    android:contentDescription="@string/back"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orders"
                    android:textSize="20sp"
                    android:textColor="#141C24"
                    android:textStyle="bold" />
            </LinearLayout>


            <Spinner
                android:id="@+id/spinner_sort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:entries="@array/sort_options_orders_customer_orders"
                android:prompt="@string/sort_by_prompt"
                android:minHeight="48dp" />


            <LinearLayout
                android:id="@+id/orderItem0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/table_bg"
                android:padding="12dp"
                android:layout_marginBottom="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tv_order_number_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order No: 1234"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#141C24"
                        android:layout_weight="1" />
                </LinearLayout>



                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <TableRow
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_time_ordered_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Ordered"
                            android:textColor="#1E1E1E"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13:20 PM"
                            android:textColor="#636366"
                            android:textSize="14sp"
                            android:gravity="end" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order/s"
                            android:textStyle="bold"
                            android:textColor="#1E1E1E"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textColor="#1E1E1E"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chicken Oyakodon Supreme"
                            android:textColor="#636366"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x5"
                            android:textColor="#636366"
                            android:gravity="end"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Special Request"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1E1E1E" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Chicken"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:gravity="end"
                            android:textSize="12sp"
                            android:textColor="#636366" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pork Katsudon"
                            android:textColor="#636366"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x1"
                            android:gravity="end"
                            android:textColor="#636366"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Red Ice Tea"
                            android:textColor="#636366"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x1"
                            android:gravity="end"
                            android:textColor="#636366"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Special Request"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1E1E1E" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Ice"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="12sp"
                            android:gravity="end"
                            android:textColor="#636366" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <!-- Second Order Section -->
            <LinearLayout
                android:id="@+id/orderItem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/table_bg"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <!-- Order Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tv_order_number_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order No: 1235"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#141C24"
                        android:layout_weight="1" />
                </LinearLayout>

                <!-- Order Items Header -->

                <!-- Order Items -->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <TableRow
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_time_ordered_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Ordered"
                            android:textColor="#1E1E1E"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13:20 PM"
                            android:gravity="end"
                            android:textColor="#636366"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order/s"
                            android:textColor="#1E1E1E"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            android:gravity="end"
                            android:textColor="#1E1E1E"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pork Katsudon"
                            android:textColor="#636366"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x1"
                            android:textColor="#636366"
                            android:gravity="end"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Red Ice Tea"
                            android:textColor="#636366"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x6"
                            android:gravity="end"
                            android:textColor="#636366"
                            android:textSize="14sp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        style="@style/BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="8dp"/>
</RelativeLayout>