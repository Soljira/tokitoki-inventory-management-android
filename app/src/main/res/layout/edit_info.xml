<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Info"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_delete" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supplier's ID"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Supplier ID"
            android:text="1234"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/tokiGray"
            android:padding="10dp"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supplier's Name"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Supplier Name"
            android:textColor="@color/tokiGray"
            android:text="X"
            android:padding="10dp"
            android:background="@drawable/edit_text_border" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Info"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:text="supplierx@gmail.com"
            android:padding="10dp"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/tokiGray"
            android:inputType="textEmailAddress"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Phone Number"
            android:text="+63900 000 0000"
            android:padding="10dp"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/tokiGray"
            android:inputType="phone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook Link"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Facebook Link"
            android:text="facebook.com/supplierx"
            android:padding="10dp"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/tokiGray"
            android:inputType="textUri"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Location"
            android:text="Ramon Cojuanco Bldg., Makati Avenue, Makati City"
            android:padding="10dp"
            android:textColor="@color/tokiGray"
            android:background="@drawable/edit_text_border"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Location"
            android:text="Pedro Gil St., Paco Manila"
            android:textColor="@color/tokiGray"
            android:padding="10dp"
            android:background="@drawable/edit_text_border">

        </EditText>

        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/black"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
