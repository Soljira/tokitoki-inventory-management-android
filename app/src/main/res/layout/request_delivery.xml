<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/supplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="Request Delivery"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent">



        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:stretchColumns="0,1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/supplier">

            <TableRow>

                <TextView
                    android:background="@drawable/table_bg_red_left"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Item"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:background="@color/tokiRed"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Quantity"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:background="@drawable/table_bg_red_right"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Supplier"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:background="@drawable/table_border"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Carrots"
                    android:textColor="@color/black" />

                <TextView
                    android:background="@drawable/table_border"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="50 kg"
                    android:textColor="@color/black" />

                <TextView
                    android:background="@drawable/table_border"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Supplier Y"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow>

                <TextView
                    android:background="@drawable/table_border"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Soy Sauce"
                    android:textColor="@color/black" />

                <TextView
                    android:background="@drawable/table_border"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="30 L"
                    android:textColor="@color/black" />

                <TextView
                    android:background="@drawable/table_border"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Supplier X"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow>

                <TextView
                    android:background="@drawable/table_border"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Onions"
                    android:textColor="@color/black" />

                <TextView
                    android:background="@drawable/table_border"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="20 kg"
                    android:textColor="@color/black" />

                <TextView
                    android:background="@drawable/table_border"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Supplier X"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow>

                <TextView
                    android:background="@drawable/table_border"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Pepper"
                    android:textColor="@color/black" />

                <TextView
                    android:background="@drawable/table_border"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="5 kg"
                    android:textColor="@color/black" />

                <TextView
                    android:background="@drawable/table_border"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Supplier X"
                    android:textColor="@color/black" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:backgroundTint="@color/dark_gray"
        android:text="Add low-stock items"
        android:textSize="19sp"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnplaceorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="50dp"
        android:backgroundTint="@color/dark_gray"
        android:text="Place Order"
        android:textSize="19sp"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>